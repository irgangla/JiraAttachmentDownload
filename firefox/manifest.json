{
    "manifest_version": 2,
    
    "name": "JIRA Attachment Download",
    
    "description": "Select JIRA attachments form a ticket and download them.",
  
    "author": "Thomas Irgang",
    
    "version": "1.5",
    
    "browser_action": {
        "browser_style": true,
        "default_popup": "popup.html", 
        "default_icon": "icon.png"
    },
    
    "background": {
        "scripts": ["background.js"]
    },
    
    "options_ui": {
        "page": "options.html"
    },
    
    "permissions": [
        "<all_urls>",
        "downloads", 
        "storage",
        "tabs",
        "activeTab"
    ]
}
