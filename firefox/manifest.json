{
    "manifest_version": 2,
    
    "name": "JIRA Attachment Download",
    
    "description": "Select JIRA attachments form a ticket and download them.",
  
    "author": "Thomas Irgang",
    
    "version": "1.4",
    
    "browser_action": {
        "browser_style": true,
        "default_popup": "popup.html", 
        "default_icon": "icon.png"
    },
    
    "permissions": [
        "downloads", 
        "<all_urls>", 
        "storage",
        "tabs"
    ]
}
